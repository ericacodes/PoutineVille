<% include partials/_header %>

<div class="container">
    <div class="display-container mt-5 mx-auto p-5">
        <h3 class="mt-3">Add Dish</h3>

        <form method="POST" action="/admin/display">
            <div class="form-group row">
                <label for="dishName" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dishName" name="newDish[name]" placeholder="dish name"
                        required>
                </div>
            </div>
            <div class="form-group row">
                <label for="dishDescription" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dishDescription" name="newDish[description]"
                        placeholder="dish description" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="dishPrice" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dishPrice" name="newDish[price]"
                        placeholder="dish price" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="dishUrl" class="col-sm-2 col-form-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dishUrl" name="newDish[image_url]"
                        placeholder="dish image url" required>
                </div>
            </div>

            <button type="submit" class="btn btn-outline-secondary">Add Dish</button>
        </form>

        <% include partials/_footer %>
        <script type="text/javascript" src="./scripts/owner.js"></script>
        </body>

        </html>